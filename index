    <script>
        document.getElementById("rentaForm").addEventListener("submit", function(e){
            e.preventDefault();

            const data = {
                nombre: this.nombre.value,
                celular: this.celular.value,
                cedula: this.cedula.value
            };

            fetch("https://script.google.com/macros/s/AKfycbziyIE59HPVIrGIm5qyv04vbr53tLNCOWVJdITjB5VY1UQ-Z_6cX_HupGtWDzWCXSL64A/exec", {
                method: "POST",
                mode: "no-cors",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify(data)
            }).then(() => {
                alert("Datos enviados correctamente");
                document.getElementById("rentaForm").reset();
            }).catch(err => {
                alert("Error al enviar los datos");
                console.error(err);
            });
        });
    </script>

